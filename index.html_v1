        }
        
        .target-market-criteria {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 40px;
        }
        
        .target-market-card {
            background: var(--light-gray);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .target-market-card h4 {
            font-size: 1.3rem;
            color: var(--teal);
            margin-bottom: 15px;
        }
        
        /* Testimonials Section - Matched to Open2Search */
        .testimonials {
            padding: 80px 0;
            background-color: var(--light-gray);
        }
        
        .testimonial-container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        blockquote {
            font-size: 1.3rem;
            line-height: 1.6;
            margin: 50px 0;
            padding: 40px;
            border-left: 4px solid var(--teal);
            background-color: var(--white);
            border-radius: 8px;
            position: relative;
            font-style: italic;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }
        
        blockquote:before {
            content: '\201C';
            position: absolute;
            top: 20px;
            left: 10px;
            font-size: 5rem;
            color: rgba(0,128,128,0.1);
            font-family: Georgia, serif;
        }
        
        blockquote span {
            display: block;
            margin-top: 20px;
            color: var(--teal);
            font-weight: bold;
            font-style: normal;
        }
        
        /* CTA Section - Matched to Open2Search */
        .cta-section {
            background-color: var(--navy);
            color: var(--white);
            text-align: center;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }
        
        .cta-section h3 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        
        .cta-section p {
            max-width: 600px;
            margin: 0 auto 30px;
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        /* Form Styles - Matched to Open2Search */
        form {
            max-width: 600px;
            margin: 40px auto 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }
        
        .form-group {
            flex: 1;
            min-width: 300px;
            position: relative;
        }
        
        form input[type="email"] {
            padding: 15px 20px;
            border-radius: 6px;
            border: none;
            width: 100%;
            font-size: 1rem;
            transition: var(--transition);
        }
        
        form input[type="email"]:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(0, 128, 128, 0.1);
        }
        
        form button[type="submit"] {
            padding: 15px 35px;
            border: none;
            cursor: pointer;
            transition: var(--transition);
            border-radius: 6px;
            font-weight: 600;
            background-color: var(--teal);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 128, 128, 0.3);
        }
        
        form button[type="submit"]:hover {
            background-color: var(--navy);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 35, 102, 0.4);
        }
        
        /* Footer - Matched to Open2Search */
        footer {
            background-color: var(--navy);
            color: var(--white);
            padding: 80px 0 20px;
            position: relative;
        }
        
        footer:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 10px;
            background: linear-gradient(90deg, var(--teal), var(--navy));
        }
        
        .footer-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 50px;
            margin-bottom: 50px;
        }
        
